    "build": "bun build src/main.ts --outdir dist",
    "test": "bun test",
    "test:watch": "npm run test -- --watch",
    "lint": "eslint ./**/*.ts",
    "lint:fix": "npm run lint -- --fix",
    "format": "prettier ./src/**/*.ts --write"
