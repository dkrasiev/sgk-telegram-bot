    "@grammyjs/runner": "^2.0.3",
    "@grammyjs/storage-redis": "^2.4.0",
    "@types/reflect-metadata": "^0.1.0",
    "core-js": "^3.33.1",
    "envalid": "^8.0.0",
    "grammy": "^1.19.2",
    "inversify": "^6.0.2",
    "ioredis": "^5.3.2",
    "reflect-metadata": "^0.1.13",
    "tsyringe": "^4.8.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/i18n": "^0.13.8",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "bun-types": "latest",
    "eslint": "^8.52.0",
